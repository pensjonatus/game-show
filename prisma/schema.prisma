// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Team {
  id          String  @id @default(cuid())
  name        String
  avatarUrl   String?
  score       Int     @default(0)
  chancesLost Int     @default(0)
  Game        Game[]
}

model Answer {
  id                 String   @id @default(cuid())
  content            String
  points             Int
  isRevealed         Boolean  @default(false)
  pointsAlreadyGiven Boolean  @default(false)
  questionId         String
  question           Question @relation(fields: [questionId], references: [id])
}

enum QuestionType {
  SINGLE
  DOUBLE
  TRIPLE
  TRUE_FALSE
  FINALE
}

model Question {
  id           String       @id @default(cuid())
  content      String
  playerAnswer String?
  scoreAwarded Int?         @default(0)
  answers      Answer[]
  type         QuestionType
  Game         Game[]
}

model Game {
  id              String    @id @default(cuid())
  inProgress      Boolean   @default(false)
  inFinale        Boolean   @default(false)
  finaleTeam      Team?     @relation(fields: [finaleTeamId], references: [id])
  finaleTeamId    String?
  finaleScore     Int?      @default(0)
  currentQuestion Question? @relation(fields: [questionId], references: [id])
  questionId      String?
}
